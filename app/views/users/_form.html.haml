= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :password
    = f.password_field :password
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :level
    = f.number_field :level
  .field
    = f.label :roles
    = f.number_field :roles
    .actions
    = f.submit
