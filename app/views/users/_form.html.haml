= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :login
    = f.text_field :login
  .field
    = f.label :pass
    = f.password_field :pass
  .field
    = f.label :nicename
    = f.text_field :nicename
  .field
    = f.label :email
    = f.email_field :email
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit
